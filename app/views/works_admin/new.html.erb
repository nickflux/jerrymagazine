<h1>New work</h1>

<% form_for :work, @work, :url => {:action => 'create'} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :work_type %><br />
    <%= f.select :work_type, @work_type_opts %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract, :class => "mceEditor" %>
  </p>
  <p>
    <%= f.label :work_content %><br />
    <%= f.text_area :work_content, :class => "mceEditor" %>
  </p>
  <p>
    <%= f.label :edition_id %><br />
    <%= f.select :edition_id, Edition.all(:order => 'edition_no').collect{|e| ["#{e.edition_no} #{e.title}", e.id] } %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.select :user_id, User.all(:order => 'lastname').collect{|u| ["#{u.lastname}, #{u.firstname}", u.id] } %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', works_admin_path %>