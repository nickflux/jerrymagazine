#note_to_note
  %h3 Note to Note
  = textilize(@edition.description)
%ul#contributors
  - @contributors.each do |contributor|
    %li
      %h4{:rel => "#overlay_user_#{contributor.id}"}
        = contributor.get_fullname
      %p
        a short bit of text
      .work_overlay[contributor, :overlay]
        %ul
          - contributor.get_edition_works(@edition.id).each do |work|
            %li= link_to(no_paragraph(work.title_calc), work_path(work))